{
    "gradient_accumulation_steps": 1,
    "train_micro_batch_size_per_gpu": 32,

    "gradient_clipping": 1.0,

    "steps_per_print": 1,
    "wall_clock_breakdown": false,
    "dump_state":false,

    "fp16": {
        "enabled": false,
        "loss_scale": 0,
        "loss_scale_window": 1000,
        "initial_scale_power": 16,
        "hysteresis": 2,
        "min_loss_scale": 1
    },
    "bf16": {
        "enabled": true
    },

    "optimizer": {
        "type": "Adam",
        "params": {
            "lr": 1e-4,
            "betas": [
                0.9,
                0.99
            ],
            "eps": 1e-7,
            "weight_decay": 0,
            "torch_adam": false,
            "adam_w_mode": true
        }
    },
    "zero_optimization": {
        "stage": 3,
        "offload_optimizer": {
            "device": "cpu",
            "pin_memory": true
        },
        "offload_param": {
            "device": "cpu",
            "pin_memory": true
        },
        "overlap_comm": true,
        "contiguous_gradients": true,
        "sub_group_size": 2e8,
        "reduce_bucket_size": 2e8,
        "stage3_prefetch_bucket_size": 2e8,
        "stage3_max_live_parameters": 2e8,
        "stage3_max_reuse_distance": 2e8,
        "stage3_gather_16bit_weights_on_model_save": true
    }
}